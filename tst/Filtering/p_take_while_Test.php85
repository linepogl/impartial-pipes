<?php

declare(strict_types=1);

namespace Tests\Filtering;

use Tests\UnitTestCase;

use function ImpartialPipes\p_take_while;
use function Tests\p_assert_iterates_like;

/**
 * @internal
 */
final class p_take_while_Test extends UnitTestCase
{
    public function test_p_take_while(): void
    {
        []
        |> p_take_while(fn (int $x) => $x % 2 === 1)
        |> p_assert_iterates_like([]);

            []
        |> p_take_while(fn (int $x) => $x % 2 === 1, preserveKeys: true)
        |> p_assert_iterates_like([]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take_while(fn (int $x) => $x % 2 === 1)
        |> p_assert_iterates_like([1]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take_while(fn (int $x) => $x % 2 === 1, preserveKeys: true)
        |> p_assert_iterates_like(['a' => 1]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take_while(fn (int $x, string $k) => $k === 'a')
        |> p_assert_iterates_like([1]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take_while(fn (int $x, string $k) => $k === 'a', preserveKeys: true)
        |> p_assert_iterates_like(['a' => 1]);
    }
}
