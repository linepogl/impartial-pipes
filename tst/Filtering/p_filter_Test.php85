<?php

declare(strict_types=1);

namespace Tests\Filtering;

use Tests\UnitTestCase;

use function ImpartialPipes\p_filter;

/**
 * @internal
 */
final class p_filter_Test extends UnitTestCase
{
    public function test_p_filter(): void
    {
        $this->expect(
            []
            |> p_filter(fn (int $x) => $x % 2 === 0)
        )->toIterateLike([]);

        $this->expect(
            []
            |> p_filter(fn (int $x) => $x % 2 === 0, preserveKeys: true)
        )->toIterateLike([]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_filter(fn (int $x) => $x % 2 === 0)
        )->toIterateLike([2, 4]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_filter(fn (int $x) => $x % 2 === 0, preserveKeys: true)
        )->toIterateLike(['b' => 2, 'd' => 4]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_filter(fn (int $x, string $k) => $k === 'b')
        )->toIterateLike([2]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_filter(fn (int $x, string $k) => $k === 'b', preserveKeys: true)
        )->toIterateLike(['b' => 2]);
    }
}
