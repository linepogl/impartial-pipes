<?php

declare(strict_types=1);

namespace Tests\Filtering;

use Tests\UnitTestCase;

use function ImpartialPipes\p_skip;
use function Tests\p_assert_iterates_like;

/**
 * @internal
 */
final class p_skip_Test extends UnitTestCase
{
    public function test_p_skip(): void
    {
        []
        |> p_skip(2)
        |> p_assert_iterates_like([]);

        []
        |> p_skip(2, preserveKeys: true)
        |> p_assert_iterates_like([]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_skip(2)
        |> p_assert_iterates_like([3, 4]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_skip(2, preserveKeys: true)
        |> p_assert_iterates_like(['c' => 3, 'd' => 4]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_skip(-2)
        |> p_assert_iterates_like([1, 2, 3, 4]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_skip(-2, preserveKeys: true)
        |> p_assert_iterates_like(['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]);

    }
}
