<?php

declare(strict_types=1);

namespace Tests\Filtering;

use Tests\UnitTestCase;

use function ImpartialPipes\p_unique;

/**
 * @internal
 */
final class p_unique_Test extends UnitTestCase
{
    public function test_p_unique(): void
    {
        $this->expect(
            []
            |> p_unique()
        )->toIterateLike([]);

        $this->expect(
            []
            |> p_unique(preserveKeys: true)
        )->toIterateLike([]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 1, 'd' => 4]
            |> p_unique()
        )->toIterateLike([1, 2, 4]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 1, 'd' => 4]
            |> p_unique(preserveKeys: true)
        )->toIterateLike(['a' => 1, 'b' => 2, 'd' => 4]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_unique(static fn (int $x) => $x % 2)
        )->toIterateLike([1, 2]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_unique(static fn (int $x) => $x % 2, preserveKeys: true)
        )->toIterateLike(['a' => 1, 'b' => 2]);

        $this->expect(
            ['a' => 1, 'aa' => 2, 'b' => 3, 'bb' => 4]
            |> p_unique(static fn (int $x, string $k) => $k[0])
        )->toIterateLike([1, 3]);

        $this->expect(
            ['a' => 1, 'aa' => 2, 'b' => 3, 'bb' => 4]
            |> p_unique(static fn (int $x, string $k) => $k[0], preserveKeys: true)
        )->toIterateLike(['a' => 1, 'b' => 3]);
    }
}
