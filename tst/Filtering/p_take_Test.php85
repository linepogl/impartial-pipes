<?php

declare(strict_types=1);

namespace Tests\Filtering;

use Tests\UnitTestCase;

use function ImpartialPipes\p_take;
use function Tests\p_assert_iterates_like;

/**
 * @internal
 */
final class p_take_Test extends UnitTestCase
{
    public function test_p_take(): void
    {
        []
        |> p_take(2)
        |> p_assert_iterates_like([]);

        []
        |> p_take(2, preserveKeys: true)
        |> p_assert_iterates_like([]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take(2)
        |> p_assert_iterates_like([1, 2]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take(2, preserveKeys: true)
        |> p_assert_iterates_like(['a' => 1, 'b' => 2]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take(-2)
        |> p_assert_iterates_like([]);

            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_take(-2, preserveKeys: true)
        |> p_assert_iterates_like([]);

    }
}
