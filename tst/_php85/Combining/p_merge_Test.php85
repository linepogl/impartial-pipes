<?php

declare(strict_types=1);

namespace Tests\Combining;

use Tests\UnitTestCase;

use function ImpartialPipes\p_merge;
use function Tests\p_assert_iterates_like;

/**
 * @internal
 */
final class p_merge_Test extends UnitTestCase
{
    public function test_p_merge(): void
    {
        []
        |> p_merge([])
        |> p_assert_iterates_like([]);

        []
        |> p_merge([], preserveKeys: true)
        |> p_assert_iterates_like([]);

        [1,2]
        |> p_merge([3,4])
        |> p_assert_iterates_like([1,2,3,4]);

        [1,2]
        |> p_merge([3,4], preserveKeys: true)
        |> p_assert_iterates_like([1,2]);

            ['a' => 1,'b' => 2,'c' => 3]
        |> p_merge(['b' => 22,'c' => 33,'d' => 4])
        |> p_assert_iterates_like([1,2,3,22,33,4]);

            ['a' => 1,'b' => 2,'c' => '3']
        |> p_merge(['b' => 2,'c' => 3,'d' => 4], preserveKeys: true)
        |> p_assert_iterates_like(['a' => 1,'b' => 2,'c' => 3,'d' => 4]);
    }
}
