<?php

declare(strict_types=1);

namespace Tests\Mapping;

use Tests\UnitTestCase;

use function ImpartialPipes\p_map;

/**
 * @internal
 */
final class p_map_Test extends UnitTestCase
{
    public function test_p_map(): void
    {
        $this->expect(
            []
            |> p_map(fn (int $x) => $x * $x)
        )->toIterateLike([]);

        $this->expect(
            [1, 2, 3, 4]
            |> p_map(fn (int $x) => $x * $x)
        )->toIterateLike([1, 4, 9, 16]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_map(fn (int $x) => $x * $x)
        )->toIterateLike(['a' => 1, 'b' => 4, 'c' => 9, 'd' => 16]);

        $this->expect(
            ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
            |> p_map(fn (int $x, string $k) => $x . $k)
        )->toIterateLike(['a' => '1a', 'b' => '2b', 'c' => '3c', 'd' => '4d']);
    }
}
