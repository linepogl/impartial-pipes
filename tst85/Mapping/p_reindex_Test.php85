<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Mapping;

use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_reindex;
use function Should\shouldIterateLike;

/**
 * @internal
 */
final class p_reindex_Test extends TestCase
{
    public function test_p_reindex(): void
    {
        []
        |> p_reindex(fn (int $x) => $x * $x)
        |> shouldIterateLike([], repeatedly: true);

        [1, 2, 3, 4]
        |> p_reindex(fn (int $x) => $x * $x)
        |> shouldIterateLike([1 => 1, 4 => 2, 9 => 3, 16 => 4], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_reindex(fn (int $x) => $x * $x)
        |> shouldIterateLike([1 => 1, 4 => 2, 9 => 3, 16 => 4], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_reindex(fn (int $x, string $k) => $x . $k)
        |> shouldIterateLike(['1a' => 1, '2b' => 2, '3c' => 3, '4d' => 4], repeatedly: true);

        ['a' => 1, 'b' => 1, 'c' => 2, 'd' => 2]
        |> p_reindex(fn (int $x) => $x * $x)
        |> shouldIterateLike((static function () { yield 1 => 1; yield 1 => 1; yield 4 => 2; yield 4 => 2; })(), repeatedly: true);
    }
}
