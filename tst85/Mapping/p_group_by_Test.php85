<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Mapping;

use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_group_by;
use function Should\shouldIterateLike;

/**
 * @internal
 */
final class p_group_by_Test extends TestCase
{
    public function test_p_group_by(): void
    {
        []
        |> p_group_by(fn (int $x) => $x % 2)
        |> shouldIterateLike([], repeatedly: true);

        []
        |> p_group_by(fn (int $x) => $x % 2, preserveKeys: true)
        |> shouldIterateLike([], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_group_by(fn (int $x) => $x % 2)
        |> shouldIterateLike([1 => [1, 3], 0 => [2, 4]], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_group_by(fn (int $x) => $x % 2, preserveKeys: true)
        |> shouldIterateLike([1 => ['a' => 1, 'c' => 3], 0 => ['b' => 2, 'd' => 4]], repeatedly: true);

        ['a' => 1, 'aa' => 2, 'b' => 3, 'bb' => 4]
        |> p_group_by(fn (int $x, string $k) => $k[0])
        |> shouldIterateLike(['a' => [1, 2], 'b' => [3, 4]], repeatedly: true);

        ['a' => 1, 'aa' => 2, 'b' => 3, 'bb' => 4]
        |> p_group_by(fn (int $x, string $k) => $k[0], preserveKeys: true)
        |> shouldIterateLike(['a' => ['a' => 1, 'aa' => 2], 'b' => ['b' => 3, 'bb' => 4]], repeatedly: true);
    }
}
