<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Mapping;

use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_map;
use function Tests\p_assert_iterates_like;

/**
 * @internal
 */
final class p_map_Test extends TestCase
{
    public function test_p_map(): void
    {
        []
        |> p_map(fn (int $x) => $x * $x)
        |> p_assert_iterates_like([]);

        [1, 2, 3, 4]
        |> p_map(fn (int $x) => $x * $x)
        |> p_assert_iterates_like([1, 4, 9, 16]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_map(fn (int $x) => $x * $x)
        |> p_assert_iterates_like(['a' => 1, 'b' => 4, 'c' => 9, 'd' => 16]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_map(fn (int $x, string $k) => $x . $k)
        |> p_assert_iterates_like(['a' => '1a', 'b' => '2b', 'c' => '3c', 'd' => '4d']);
    }
}
