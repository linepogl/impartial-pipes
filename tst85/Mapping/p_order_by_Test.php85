<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Mapping;

use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_order_by;
use function Tests\shouldIterateLike;

/**
 * @internal
 */
final class p_order_by_Test extends TestCase
{
    public function test_p_order_by(): void
    {
        []
        |> p_order_by(fn (int $x) => abs($x))
        |> shouldIterateLike([]);

        []
        |> p_order_by(fn (int $x) => abs($x), descending: true)
        |> shouldIterateLike([]);

        []
        |> p_order_by(fn (int $x, string $k) => $k)
        |> shouldIterateLike([]);

        []
        |> p_order_by(fn (int $x, string $k) => $k, descending: true)
        |> shouldIterateLike([]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x) => abs($x))
        |> shouldIterateLike([1, -1, 2, -2, 3, -3]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x) => abs($x), descending: true)
        |> shouldIterateLike([3, -3, 2, -2, 1, -1]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x, string $k) => $k[0])
        |> shouldIterateLike([1, -1, 2, -2, 3, -3]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x, string $k) => $k[0], descending: true)
        |> shouldIterateLike([3, -3, 2, -2, 1, -1]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x) => abs($x), preserveKeys: true)
        |> shouldIterateLike(['a' => 1, 'aa' => -1, 'b' => 2, 'bb' => -2, 'c' => 3, 'cc' => -3]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x) => abs($x), descending: true, preserveKeys: true)
        |> shouldIterateLike(['c' => 3, 'cc' => -3, 'b' => 2, 'bb' => -2, 'a' => 1, 'aa' => -1]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x, string $k) => $k[0], preserveKeys: true)
        |> shouldIterateLike(['a' => 1, 'aa' => -1, 'b' => 2, 'bb' => -2, 'c' => 3, 'cc' => -3]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'aa' => -1, 'bb' => -2, 'cc' => -3]
        |> p_order_by(fn (int $x, string $k) => $k[0], descending: true, preserveKeys: true)
        |> shouldIterateLike(['c' => 3, 'cc' => -3, 'b' => 2, 'bb' => -2, 'a' => 1, 'aa' => -1]);
    }
}
