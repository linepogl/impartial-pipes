<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Reducing;

use ArrayIterator;
use OutOfBoundsException;
use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_first;
use function Tests\shouldBe;
use function Tests\shouldThrow;

/**
 * @internal
 */
final class p_first_Test extends TestCase
{
    public function test_p_first_with_arrays(): void
    {
        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            []
            |> p_first()
        );

        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            []
            |> p_first(static fn (int $x) => $x > 1)
        );

        [1,2,3]
        |> p_first()
        |> shouldBe(1);

        [1,2,3]
        |> p_first(static fn (int $x) => $x > 1)
        |> shouldBe(2);

        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            [1,2,3]
            |> p_first(static fn (int $x) => $x > 3)
        );

        ['a' => 1, 'aa' => 2, 'aaa' => 3]
        |> p_first()
        |> shouldBe(1);

        ['a' => 1, 'aa' => 2, 'aaa' => 3]
        |> p_first(static fn (int $x, string $k) => strlen($k) > 1)
        |> shouldBe(2);

        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            ['a' => 1, 'aa' => 2, 'aaa' => 3]
            |> p_first(static fn (int $x, string $k) => strlen($k) > 3)
        );
    }

    public function test_p_first_with_iterables(): void
    {
        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            new ArrayIterator([])
            |> p_first()
        );

        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            new ArrayIterator([])
            |> p_first(static fn (int $x) => $x > 1)
        );

        new ArrayIterator([1,2,3])
        |> p_first()
        |> shouldBe(1);

        new ArrayIterator([1,2,3])
        |> p_first(static fn (int $x) => $x > 1)
        |> shouldBe(2);

        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            new ArrayIterator([1,2,3])
            |> p_first(static fn (int $x) => $x > 3)
        );

        new ArrayIterator(['a' => 1, 'aa' => 2, 'aaa' => 3])
        |> p_first()
        |> shouldBe(1);

        new ArrayIterator(['a' => 1, 'aa' => 2, 'aaa' => 3])
        |> p_first(static fn (int $x, string $k) => strlen($k) > 1)
        |> shouldBe(2);

        shouldThrow(OutOfBoundsException::class)(
            static fn () =>
            new ArrayIterator(['a' => 1, 'aa' => 2, 'aaa' => 3])
            |> p_first(static fn (int $x, string $k) => strlen($k) > 3)
        );
    }
}
