<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Reducing;

use ArrayIterator;
use Tests\UnitTestCase;

use function ImpartialPipes\p_first_or;
use function Tests\p_assert_equals;

/**
 * @internal
 */
final class p_first_or_Test extends UnitTestCase
{
    public function test_p_first_or_with_arrays(): void
    {
        []
        |> p_first_or(null)
        |> p_assert_equals(null);

        []
        |> p_first_or(null, static fn (int $x) => $x > 1)
        |> p_assert_equals(null);

        [1,2,3]
        |> p_first_or(null)
        |> p_assert_equals(1);

        [1,2,3]
        |> p_first_or(null, static fn (int $x) => $x > 1)
        |> p_assert_equals(2);

        [1,2,3]
        |> p_first_or(null, static fn (int $x) => $x > 3)
        |> p_assert_equals(null);

        ['a' => 1, 'aa' => 2, 'aaa' => 3]
        |> p_first_or(null)
        |> p_assert_equals(1);

        ['a' => 1, 'aa' => 2, 'aaa' => 3]
        |> p_first_or(null, static fn (int $x, string $k) => strlen($k) > 1)
        |> p_assert_equals(2);

        ['a' => 1, 'aa' => 2, 'aaa' => 3]
        |> p_first_or(null, static fn (int $x, string $k) => strlen($k) > 3)
        |> p_assert_equals(null);
    }

    public function test_p_first_or_with_iterables(): void
    {
        new ArrayIterator([])
        |> p_first_or(null)
        |> p_assert_equals(null);

        new ArrayIterator([])
        |> p_first_or(null, static fn (int $x) => $x > 1)
        |> p_assert_equals(null);

        new ArrayIterator([1,2,3])
        |> p_first_or(null)
        |> p_assert_equals(1);

        new ArrayIterator([1,2,3])
        |> p_first_or(null, static fn (int $x) => $x > 1)
        |> p_assert_equals(2);

        new ArrayIterator([1,2,3])
        |> p_first_or(null, static fn (int $x) => $x > 3)
        |> p_assert_equals(null);

        new ArrayIterator(['a' => 1, 'aa' => 2, 'aaa' => 3])
        |> p_first_or(null)
        |> p_assert_equals(1);

        new ArrayIterator(['a' => 1, 'aa' => 2, 'aaa' => 3])
        |> p_first_or(null, static fn (int $x, string $k) => strlen($k) > 1)
        |> p_assert_equals(2);

        new ArrayIterator(['a' => 1, 'aa' => 2, 'aaa' => 3])
        |> p_first_or(null, static fn (int $x, string $k) => strlen($k) > 3)
        |> p_assert_equals(null);
    }
}
