<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Filtering;

use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_filter;
use function Should\shouldRepeatedlyIterateLike;

/**
 * @internal
 */
final class p_filter_Test extends TestCase
{
    public function test_p_filter(): void
    {
        []
        |> p_filter(fn (int $x) => $x % 2 === 0)
        |> shouldRepeatedlyIterateLike([]);

        []
        |> p_filter(fn (int $x) => $x % 2 === 0, preserveKeys: true)
        |> shouldRepeatedlyIterateLike([]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_filter(fn (int $x) => $x % 2 === 0)
        |> shouldRepeatedlyIterateLike([2, 4]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_filter(fn (int $x) => $x % 2 === 0, preserveKeys: true)
        |> shouldRepeatedlyIterateLike(['b' => 2, 'd' => 4]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_filter(fn (int $x, string $k) => $k === 'b')
        |> shouldRepeatedlyIterateLike([2]);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_filter(fn (int $x, string $k) => $k === 'b', preserveKeys: true)
        |> shouldRepeatedlyIterateLike(['b' => 2]);
    }
}
