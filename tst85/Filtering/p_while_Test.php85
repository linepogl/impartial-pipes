<?php // This file is autogenerated

declare(strict_types=1);

namespace Tests\Filtering;

use PHPUnit\Framework\TestCase;

use function ImpartialPipes\p_while;
use function Should\shouldIterateLike;

/**
 * @internal
 */
final class p_while_Test extends TestCase
{
    public function test_p_while(): void
    {
        []
        |> p_while(fn (int $x) => $x % 2 === 1)
        |> shouldIterateLike([], repeatedly: true);

        []
        |> p_while(fn (int $x) => $x % 2 === 1, preserveKeys: true)
        |> shouldIterateLike([], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_while(fn (int $x) => $x % 2 === 1)
        |> shouldIterateLike([1], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_while(fn (int $x) => $x % 2 === 1, preserveKeys: true)
        |> shouldIterateLike(['a' => 1], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_while(fn (int $x, string $k) => $k === 'a')
        |> shouldIterateLike([1], repeatedly: true);

        ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4]
        |> p_while(fn (int $x, string $k) => $k === 'a', preserveKeys: true)
        |> shouldIterateLike(['a' => 1], repeatedly: true);
    }
}
